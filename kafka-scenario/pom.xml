        <profile>
            <id>kafka-scenario-1.0.0</id>
            <properties>
                <test.framework.version>1.0.0</test.framework.version>
            </properties>
        </profile>
        <profile>
            <id>kafka-scenario-1.0.1</id>
            <properties>
                <test.framework.version>1.0.1</test.framework.version>
